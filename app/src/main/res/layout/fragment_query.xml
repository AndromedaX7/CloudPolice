<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".mvp.view.activity.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:elevation="@dimen/dp_10"
            android:scaleType="fitXY"
            android:src="@drawable/query_banner"
            android:translationZ="@dimen/dp_2" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:background="@color/colorBg"
            android:translationZ="@dimen/dp_0" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/input_block"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginStart="@dimen/dp_24"
        android:layout_marginTop="@dimen/dp_120"
        android:layout_marginEnd="@dimen/dp_24"
        android:background="@android:color/white"
        android:elevation="@dimen/dp_4"
        android:orientation="vertical"
        android:translationZ="@dimen/dp_4">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_16"
            android:layout_marginTop="@dimen/dp_16"
            android:layout_marginEnd="@dimen/dp_16"
            android:layout_marginBottom="@dimen/dp_16"
            android:text="人员信息查询"
            android:textSize="@dimen/sp_18" />

        <Spinner
            android:id="@+id/input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_16"
            android:layout_marginEnd="@dimen/dp_16"
            android:layout_marginBottom="@dimen/dp_16"
            android:background="@drawable/sip_setting_edit_bg"
            android:paddingStart="@dimen/dp_16"
            android:paddingTop="@dimen/dp_8"
            android:paddingEnd="@dimen/dp_16"
            android:paddingBottom="@dimen/dp_8"
            android:text="请选择查询种类" />

        <TextView
            android:id="@+id/startTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_16"
            android:layout_marginEnd="@dimen/dp_16"
            android:layout_marginBottom="@dimen/dp_16"
            android:background="@drawable/sip_setting_edit_bg"
            android:paddingStart="@dimen/dp_16"
            android:paddingTop="@dimen/dp_8"
            android:paddingEnd="@dimen/dp_16"
            android:paddingBottom="@dimen/dp_8"
            android:text="请选择开始时间" />

        <TextView
            android:id="@+id/endTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_16"
            android:layout_marginEnd="@dimen/dp_16"
            android:layout_marginBottom="@dimen/dp_16"
            android:background="@drawable/sip_setting_edit_bg"
            android:paddingStart="@dimen/dp_16"
            android:paddingTop="@dimen/dp_8"
            android:paddingEnd="@dimen/dp_16"
            android:paddingBottom="@dimen/dp_8"
            android:text="请选择结束时间" />


    </LinearLayout>

    <TextView
        android:id="@+id/mQuery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/input_block"
        android:layout_alignParentStart="true"
        android:layout_marginStart="@dimen/dp_24"
        android:layout_marginTop="@dimen/sp_16"
        android:layout_marginEnd="@dimen/dp_24"
        android:background="@color/colorOrange"
        android:gravity="center"
        android:padding="@dimen/dp_16"
        android:text="@string/start_query"
        android:textColor="@android:color/white"
        android:textSize="@dimen/sp_16" />


</RelativeLayout>